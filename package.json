{
  "main": "index.html",
  "name": "vue-nodewebkit",
  "description": "Vue and Node-Webkit starter project.",
  "author": "https://github.com/nicklaw5",
  "scripts": {
    "start-web": "webpack-dev-server --inline --hot",
    "start-desktop": "node_modules/.bin/nw .",
